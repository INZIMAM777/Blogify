<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Page</title>
  <%- include('./partials/head') %>
</head>
<body>
  <%- include('./nav.ejs') %>

  <div class="container mt-4">
    <% if (user) { %>
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Welcome, <%= user.name %>!</h3>
        <a href="/blog/add-blog" class="btn btn-primary">Add Blog</a>
      </div>
    <% } else { %>
      <div class="mb-4">
        <a href="/user/signin" class="btn btn-outline-primary">Sign In</a>
      </div>
    <% } %>

    <% if (blogs.length === 0) { %>
      <p class="text-muted">No blogs yet. Be the first to add one!</p>
    <% } else { %>
      <div class="row g-4">
        <% blogs.forEach(blog => { %>
          <div class="col-md-4">
            <div class="card h-100 shadow-sm">
              <% if (blog.coverUrl) { %>
  <img src="<%= blog.coverUrl %>" class="card-img-top" alt="<%= blog.title %>" style="height:200px; object-fit:cover;">
<% } else { %>
  <img src="/images/default-cover.jpg" class="card-img-top" alt="No Cover" style="height:200px; object-fit:cover;">
<% } %>

              <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-bold"><%= blog.title %></h5>
                <p class="card-text text-muted flex-grow-1">
                  <%= (blog.body.length > 120 ? blog.body.substring(0, 120) + '...' : blog.body) %>
                </p>
                <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm mt-auto">View Blog</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  
  <%- include('./partials/script') %>
</body>
</html>
